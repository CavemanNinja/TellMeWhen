    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/new_alert_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_weight="1" >
    </FrameLayout>

    <fragment
        android:id="@+id/alert_list_fragment"
        android:name="com.tellmewhen.stocks.AlertListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </fragment>

</LinearLayout>

